<% layout('layouts/boilerplate') %>

    <!-- Login Form Section -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="border border-secondary rounded card p-4 shadow-lg"
            style="width: 25rem; background-color: rgb(245, 242, 239);">
            <div class="text-center">
                <h1 class="mb-4" style="font-family: 'algerian', sans-serif; color: #333;">LOGIN</h1>
            </div>
            <!-- Login Form -->
            <form action="/login" method="POST">
                <div class="mb-4">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-control" type="text" name="username" id="username"
                        placeholder="Enter your username" required>
                </div>

                <div class="mb-4">
                    <label class="form-label" for="password">Password:</label>
                    <input class="form-control" type="password" name="password" id="password"
                        placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-success w-100 py-2 mt-3">Login</button>

                <p class="fw-light mt-3">
                    Don't have an account?
                    <a href="/register" class="text-decoration-none fw-normal">Sign
                        Up</a>
                </p>
            </form>
        </div>
    </div>

    <!-- Add CSS for animation and effects -->
    <style>
        /* Animations */
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeIn 0.8s ease-out;
        }

        .container {
            animation: fadeIn 1s ease-out;
        }

        /* Styling for the form fields */
        .form-control {
            transition: all 0.3s ease-in-out;
        }

        .form-control:focus {
            border-color: #1f8838;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
        }

        /* Button Hover Animation */
        .btn-success {
            transition: background-color 0.3s ease;
        }

        .btn-success:hover {
            background-color: #0f7024;
        }

        /* Text Link Hover Animation */
        a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #0056b3;
        }

        /* Center the page content vertically */
        .min-vh-100 {
            min-height: 100vh;
        }

        /* Add a subtle shadow effect */
        .shadow-lg {
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        /* Responsive Design */
        @media (max-width: 576px) {
            .card {
                width: 100%;
                margin: 15px;
            }
        }
    </style>
    </body>

    </html>