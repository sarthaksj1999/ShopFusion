<% layout('layouts/boilerplate') %>
    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>
            <div class="container">
                <div class="row">
                    <% for(let item of products){ %>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mt-5">
                            <div class="card shadow-lg mx-auto" style="width: 100%; height: 100%;">
                                <img src="<%= item.img %>" class="card-img-top" alt="..."
                                    style="object-fit: cover; height: 200px; width: 100%;">
                                <div class="card-body d-flex flex-column">
                                    <h2 class="card-title">
                                        <%= item.name %>
                                    </h2>
                                    <h4 class="card-title">
                                        <%= item.price %>
                                    </h4>
                                    <p class="card-text flex-grow-1">
                                        <%= item.desc %>
                                    </p>
                                    <% if(item.reviews.length){ %>
                                        <p class="text-muted">
                                            <%=item.reviews.length%> reviews
                                        </p>
                                        <% } else { %>
                                            <p class="text-muted">No reviews</p>
                                            <% } %>
                                                <div class="btn-group mt-auto" role="group"
                                                    aria-label="Product actions">
                                                    <a href="/products/<%=item._id%>"
                                                        class="btn btn-info mx-1 rounded">View
                                                        Product</a>
                                                    <% if(currentUser && currentUser.role==='seller' ){ %>
                                                        <form class="d-inline-block"
                                                            action="/products/<%=item._id%>?_method=DELETE"
                                                            method="POST">
                                                            <button class="btn btn-danger ml-2">Delete</button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>

            <%- include('../partials/footer') %>
                </body>

                </html>